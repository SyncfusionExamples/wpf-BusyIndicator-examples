<Window x:Class="Header.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Notification="clr-namespace:Syncfusion.Windows.Controls.Notification;assembly=Syncfusion.SfBusyIndicator.WPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Header"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Notification:SfBusyIndicator Foreground="White" Background="CornflowerBlue" >
            <Notification:SfBusyIndicator.HeaderTemplate>
                <DataTemplate >
                    <TextBlock Text="Loading..." TextAlignment="Center" FontSize="15" Width="100" Foreground="Yellow" />
                </DataTemplate>
            </Notification:SfBusyIndicator.HeaderTemplate>
        </Notification:SfBusyIndicator>
    </Grid>
    
</Window>
